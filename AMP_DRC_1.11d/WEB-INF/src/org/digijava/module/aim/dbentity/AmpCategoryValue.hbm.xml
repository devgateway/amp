<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpCategoryValue" table="AMP_CATEGORY_VALUE">
		<cache usage="read-write" />
		<id name="id" column="id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_CATEGORY_VALUE_seq</param>
			</generator> 
		</id>

		<property name="value" column="category_value"  type="java.lang.String" index="value"/>
		
		<many-to-one name="ampCategoryClass" column="amp_category_class_id" class="org.digijava.module.aim.dbentity.AmpCategoryClass" cascade="none"/>
		<property name="index" column="index_column" type="int" update="true" insert="true" />
                <property name="fieldType" column="field_type" type="long"  />
                
		<set name="activities" table="AMP_ACTIVITIES_CATEGORYVALUES" lazy="true" cascade="none" inverse="true">
			<cache usage="read-write"/>
			<key column="amp_categoryvalue_id" />
			<many-to-many class="org.digijava.module.aim.dbentity.AmpActivity" column="amp_activity_id" />
		</set>
	</class>
</hibernate-mapping>