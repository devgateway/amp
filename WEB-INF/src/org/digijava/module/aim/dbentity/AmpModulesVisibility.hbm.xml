<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpModulesVisibility"
		table="AMP_MODULES_VISIBILITY" lazy="false">
		<cache usage="transactional" />
		<id name="id" column="id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_MODULES_VISIBILITY_SEQ</param>
			</generator>
		</id>

		<property name="name" column="name" type="java.lang.String" />
		<property name="description" column="description" type="java.lang.String" />
		<property name="hasLevel" column="hasLevel" type="java.lang.Boolean" />


		<set name="items" table="AMP_FEATURES_VISIBILITY" cascade="all-delete-orphan" lazy="false" >
			<key column="parent" />
			<one-to-many class="org.digijava.module.aim.dbentity.AmpFeaturesVisibility" />
		</set>

		<many-to-one name="parent" column="parent" class="org.digijava.module.aim.dbentity.AmpModulesVisibility"/>


		<set name="submodules" cascade="all-delete-orphan" lazy="false" >
			<key column="parent" />
			<one-to-many class="org.digijava.module.aim.dbentity.AmpModulesVisibility" />
		</set>

		<set name="templates" table="amp_modules_templates" lazy="false" cascade="save-update">
			<key column="module"/>
			<many-to-many column="template" class="org.digijava.module.aim.dbentity.AmpTemplatesVisibility" />
		</set>


		<set name="sources" cascade="all-delete-orphan" lazy="false">
			<key column="module_id" />
			<one-to-many class="org.digijava.module.aim.fmtool.dbentity.AmpFeatureSourceModule" />
		</set>

	</class>
</hibernate-mapping>
