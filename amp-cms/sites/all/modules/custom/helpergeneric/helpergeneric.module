            'entity action' => TRUE,
            'title' => 'Cancel',
            'prefix' => '(',
            'suffix' => ')',
          );

          $data['actions']['output'][] = array(
            '#theme' => 'menu_local_action',
            '#link' => $action_router_item,
            '#weight' => 50,
          );
        }
      }
    }
  }

  // Attach "Add blog entry" link to "Blog" listing page title.
  if ($root_path == 'blog') {
    $action_router_item = menu_get_item('node/add/blog');

    if ($action_router_item['access']) {
