/**
 * The reverse of parse_url()
 */
function helpergeneric_unparse_url($parsed_url) {
  $scheme   = isset($parsed_url['scheme']) ? $parsed_url['scheme'] . '://' : '';
  $host     = isset($parsed_url['host']) ? $parsed_url['host'] : '';
  $port     = isset($parsed_url['port']) ? ':' . $parsed_url['port'] : '';
  $user     = isset($parsed_url['user']) ? $parsed_url['user'] : '';
  $pass     = isset($parsed_url['pass']) ? ':' . $parsed_url['pass']  : '';
  $pass     = ($user || $pass) ? "$pass@" : '';
  $path     = isset($parsed_url['path']) ? $parsed_url['path'] : '';
  $query    = isset($parsed_url['query']) ? '?' . $parsed_url['query'] : '';
  $fragment = isset($parsed_url['fragment']) ? '#' . $parsed_url['fragment'] : '';
  return "$scheme$user$pass$host$port$path$query$fragment";
}

/**
 * Tries to determine if the API is online or not.
 */
function helpergeneric_check_api_status($link = TRUE) {
  static $status;

  if (isset($status)) {
    return $status;
  }

  $status = array(
    'online' => FALSE,
    'message' => '',
  );

  $response = restclient_get('test', array('reset' => TRUE, 'error_handling' => TRUE));
  if (empty($response)) {
    $status['online'] = FALSE;
    $status['message'] = t('The API server seems to be offline.');
    if ($link) {
      $t_args = array('!settings' => l(t('API Settings'), 'admin/settings/api'));
      $status['message'] .= ' ' . t('Please check the !settings page.', $t_args);
    }
    return $status;
  }

  // @TODO: Add support for more response codes.
  if (restclient_response_code($response) == RESTCLIENT_RESPONSE_SUCCESS) {
    $status['online'] = TRUE;
  }
  else {
    if (!empty($response->error)) {
      $status['message'] = t('The API returned the following status message: %message', array('%message' => $response->error));
    }
    else if (!empty($response->status_message)) {
      $status['message'] = t('The API returned the following status message: %message', array('%message' => $response->status_message));
    }
  }

  return $status;
}

