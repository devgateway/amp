    'fields' => array(
      'feed_nid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
        'description' => 'The feed nid for which the feeds image grabber is enabled',
      ),
      'enabled' => array(
