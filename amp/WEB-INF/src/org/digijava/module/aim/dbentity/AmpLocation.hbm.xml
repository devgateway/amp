<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpLocation" table="AMP_LOCATION">
		<cache usage="read-write" />
		<id name="ampLocationId" column="amp_location_id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_LOCATION_seq</param>
			</generator>
		</id>
		<property name="iso3Code" column="iso3_code" type="java.lang.String" />
		<property name="name" column="name" type="java.lang.String" />
		<property name="description" column="description" type="text" />
		<property name="gisCoordinates" column="gis_coordinates" type="java.lang.String" />
		<property name="language" column="language" type="java.lang.String" />
		<property name="version" column="version" type="java.lang.String" />
		<property name="country" column="country" type="java.lang.String" />
		<property name="region" column="region" type="java.lang.String" />
		<property name="zone" column="zone" type="java.lang.String" />
		<property name="woreda" column="woreda" type="java.lang.String" />
		<property name="geoCode" column="geo_code" type="java.lang.String" />

		<many-to-one name="dgCountry" column="country_id"
			class="org.digijava.kernel.dbentity.Country" cascade="none" />
		<many-to-one name="ampRegion" column="region_id"
			class="org.digijava.module.aim.dbentity.AmpRegion" cascade="none" />
		<many-to-one name="ampZone" column="zone_id"
			class="org.digijava.module.aim.dbentity.AmpZone" cascade="none" />
		<many-to-one name="ampWoreda" column="woreda_id"
			class="org.digijava.module.aim.dbentity.AmpWoreda" cascade="none" />
			
		<set name="activities" lazy="true" cascade="none" inverse="true">
			<key column="amp_location_id" />
			<one-to-many class="org.digijava.module.aim.dbentity.AmpActivityLocation" />
		</set>

		<many-to-one name="location" column="location_id" 
			class="org.digijava.module.aim.dbentity.AmpCategoryValueLocations" cascade="none" />
		<many-to-one name="regionLocation" column="region_location_id" 
			class="org.digijava.module.aim.dbentity.AmpCategoryValueLocations" cascade="none" />
	</class>
</hibernate-mapping>
