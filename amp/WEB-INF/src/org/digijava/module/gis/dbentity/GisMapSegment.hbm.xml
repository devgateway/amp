<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.gis.dbentity.GisMapSegment" table="DG_GIS_MAP_SEGMENT">
		<cache usage="read-write" />
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_gis_map_segment_seq</param>
			</generator>
		</id>
		<bag lazy="false" name="shapes" cascade="all" inverse="true">
			<key column="SEGMENT" />
			<one-to-many class="org.digijava.module.gis.dbentity.GisMapShape" />
		</bag>

		<many-to-one name="map" column="MAP" class="org.digijava.module.gis.dbentity.GisMap"
			cascade="none" />

		<property name="segmentId" column="SEGMENT_ID" type="long" />
		<property name="segmentType" column="SEGMENT_TYPE" type="int" />
		<property name="segmentName" column="SEGMENT_NAME" type="java.lang.String" />
		<property name="segmentCode" column="SEGMENT_CODE" type="java.lang.String" />
		<property name="parentSegmentCode" column="PARENT_SEGMENT_CODE" type="java.lang.String" />
		<property name="segmentDescription" column="SEGMENT_DESC" type="java.lang.String" />
	</class>
</hibernate-mapping>
