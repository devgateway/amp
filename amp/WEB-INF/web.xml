<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5"> 

	<display-name>AMP 2.0</display-name>
	<description>Aid Management Platform</description>

	<!-- ******************************************* -->
	<!-- * DO NOT ADD ANYTHING BEFORE THIS SEGMENT * -->
	<!-- ******************************************* -->
	<listener>
		<listener-class>
			org.dgfoundation.amp.error.keeper.DigiXmlECSLoaderListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.dgfoundation.ecs.ContextLoaderListener
		</listener-class>
	</listener>
	<!--                 SEGMENT END                 -->
		        
	<!--  ADD ENTRIES BELOW -->


	<context-param>
		<param-name>patchAMP</param-name>
		<param-value>
			org.digijava.module.aim.patches.DBPatcher:patchAMPDB
		</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring/application-context.xml
		</param-value>
	</context-param>

	<!-- Acegi -->
	<filter>
		<filter-name>Acegi Filter Chain Proxy</filter-name>
		<filter-class>
			org.acegisecurity.util.FilterToBeanProxy
		</filter-class>
		<init-param>
			<param-name>targetClass</param-name>
			<param-value>
				org.acegisecurity.util.FilterChainProxy
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Acegi Filter Chain Proxy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>Acegi Authentication</filter-name>
		<filter-class>
			org.acegisecurity.util.FilterToBeanProxy
		</filter-class>
		<init-param>
			<param-name>targetBean</param-name>
			<param-value>authenticationProcessingFilter</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Acegi Authentication</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    
	<!-- Apache Wicket -->
    <filter>
        <filter-name>OnePagerApplication</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
          <param-name>applicationClassName</param-name>
          <param-value>org.dgfoundation.amp.onepager.OnePagerApp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>OnePagerApplication</filter-name>
        <url-pattern>/wicket/*</url-pattern>
    </filter-mapping>

	<filter>
		<filter-name>showMasterLayout</filter-name>
		<filter-class>
			org.digijava.kernel.request.ShowMasterLayout
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>showMasterLayout</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Quartz Listener -->
     <context-param>
         <param-name>shutdown-on-unload</param-name>
         <param-value>true</param-value>
     </context-param>
     <context-param>
         <param-name>start-scheduler-on-load</param-name>
         <param-value>false</param-value>
     </context-param>
     <listener>
         <listener-class>
             org.quartz.ee.servlet.QuartzInitializerListener
         </listener-class>
     </listener>
	
	
	<!-- Web listener -->
	<listener>
		<listener-class>
			org.digijava.kernel.startup.ConfigLoaderListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.digijava.module.aim.startup.AMPStartupListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<!-- Startup servlet used for URL preloading -->
	<servlet>
		<servlet-name>url-preloader</servlet-name>
		<servlet-class>
			org.digijava.kernel.startup.UrlPreloaderServlet
		</servlet-class>
		<init-param>
			<param-name>urls-list-file</param-name>
			<param-value>
				repository/preload.urls.properties
			</param-value>
		</init-param>
		<init-param>
			<param-name>max-threads</param-name>
			<param-value>20</param-value>
		</init-param>
		<load-on-startup>5</load-on-startup>
	</servlet>
	<!-- End of servlet used for URL preloading -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>
			org.digijava.module.aim.config.AMPActionServlet
		</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
				/repository/struts-config.xml,
				/repository/admin/struts-config.xml,
				/repository/calendar/struts-config.xml,
				/repository/aim/struts-config.xml,
				/repository/editor/struts-config.xml,
				/repository/translation/struts-config.xml,
				/repository/um/struts-config.xml,
				/repository/exception/struts-config.xml,
				/repository/digifeed/struts-config.xml,
				/repository/gateperm/struts-config.xml,
				/repository/help/struts-config.xml,
				/repository/contentrepository/struts-config.xml, /repository/categorymanager/struts-config.xml,
				/repository/sdm/struts-config.xml,
				/repository/message/struts-config.xml,
				/repository/gis/struts-config.xml,
				/repository/widget/struts-config.xml,
				/repository/orgProfile/struts-config.xml,
				/repository/mondrian/struts-config.xml,
				/repository/dataExchange/struts-config.xml,
				/repository/parisindicator/struts-config.xml,
				/repository/search/struts-config.xml,
				/repository/content/struts-config.xml,
				/repository/visualization/struts-config.xml,
				/repository/xmlpatcher/struts-config.xml,
				/repository/esrigis/struts-config.xml
			</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>factory</param-name>
			<param-value>
				org.digijava.kernel.util.DigiMessageResourcesFactory
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<!-- JFREE Chart Start -->
	<servlet>
		<servlet-name>DisplayChart</servlet-name>
		<servlet-class>
			org.jfree.chart.servlet.DisplayChart
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayChart</servlet-name>
		<url-pattern>/aim/DisplayChart.img</url-pattern>
	</servlet-mapping>
	<!-- JFREE Chart End -->
	<!-- Standard Action Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<!-- Struts Tag Library Descriptors -->
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/exceptionHandle.do</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/exceptionHandle.do</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/exceptionHandle.do</location>
	</error-page>
	<jsp-config>
	<taglib>
		<taglib-uri>/taglib/struts-bean</taglib-uri>
		<taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/struts-html</taglib-uri>
		<taglib-location>/WEB-INF/struts-html.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/struts-logic</taglib-uri>
		<taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/struts-nested</taglib-uri>
		<taglib-location>/WEB-INF/struts-nested.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/struts-tiles</taglib-uri>
		<taglib-location>/WEB-INF/struts-tiles.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/digijava</taglib-uri>
		<taglib-location>/WEB-INF/digijava.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/category</taglib-uri>
		<taglib-location>/WEB-INF/category.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/globalsettings</taglib-uri>
		<taglib-location>/WEB-INF/globalsettings.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/aim</taglib-uri>
		<taglib-location>/WEB-INF/aim.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/moduleVisibility</taglib-uri>
		<taglib-location>/WEB-INF/moduleVisibility.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/featureVisibility</taglib-uri>
		<taglib-location>
			/WEB-INF/featureVisibility.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/fieldVisibility</taglib-uri>
		<taglib-location>/WEB-INF/fieldVisibility.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/editlivejava</taglib-uri>
		<taglib-location>/WEB-INF/taglib.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/jstl-core</taglib-uri>
		<taglib-location>/WEB-INF/c.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/fmt</taglib-uri>
		<taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/displaytag</taglib-uri>
		<taglib-location>
			/WEB-INF/tld/displaytag-11.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/jstl-functions</taglib-uri>
		<taglib-location>/WEB-INF/fn.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/taglib/tags-fckeditor</taglib-uri>
		<taglib-location>/WEB-INF/FCKeditor.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://www.tonbeller.com/wcf</taglib-uri>
		<taglib-location>/WEB-INF/wcf/wcf-tags.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://www.tonbeller.com/jpivot</taglib-uri>
		<taglib-location>
			/WEB-INF/jpivot/jpivot-tags.tld
		</taglib-location>
	</taglib>
	</jsp-config>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Restricted Resources</web-resource-name>
			<description>
				You are not allowed to view configuration files from the
				web, directly
			</description>
			<url-pattern>*.xml</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>DigiAdmin</role-name>
		</auth-constraint>
	</security-constraint>
	<!-- optional? now in JPivot by default  -->
	<context-param>
		<param-name>contextFactory</param-name>
		<param-value>
			com.tonbeller.wcf.controller.RequestContextFactoryImpl
		</param-value>
	</context-param>
	<context-param>
		<param-name>connectString</param-name>
		<param-value>@mondrian.webapp.connectString@</param-value>
	</context-param>
	<!-- optional
		<context-param>
		<param-name>chartServlet</param-name>
		<param-value>/path/to/chartServlet</param-value>
		</context-param>
	-->
	<filter>
		<filter-name>JPivotController</filter-name>
		<filter-class>
			com.tonbeller.wcf.controller.RequestFilter
		</filter-class>
		<init-param>
			<param-name>errorJSP</param-name>
			<param-value>/error.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>busyJSP</param-name>
			<param-value>/busy.jsp</param-value>
		</init-param>
		<!--
			<init-param>
			<param-name>forceExtension</param-name>
			<param-value>.faces</param-value>
			<description>replace .jsp with .faces</description>
			</init-param>
		-->
	</filter>
	<filter-mapping>
		<filter-name>JPivotController</filter-name>
		<url-pattern>/mondrian/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>mondrian.web.taglib.Listener</listener-class>
	</listener>
	<!-- resources initializer -->
	<listener>
		<listener-class>
			com.tonbeller.tbutils.res.ResourcesFactoryContextListener
		</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>MDXQueryServlet</servlet-name>
		<servlet-class>
			mondrian.web.servlet.MDXQueryServlet
		</servlet-class>
		<init-param>
			<param-name>connectString</param-name>
			<param-value>@mondrian.webapp.connectString@</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>MondrianXmlaServlet</servlet-name>
		<servlet-class>
			mondrian.xmla.impl.DefaultXmlaServlet
		</servlet-class>
	</servlet>
	<!-- jfreechart provided servlet -->
	<servlet>
		<servlet-name>GetChart</servlet-name>
		<servlet-class>
			com.tonbeller.jpivot.chart.GetChart
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Print</servlet-name>
		<servlet-class>
			org.digijava.module.mondrian.serverlet.Exporter
		</servlet-class>
	</servlet>
	<resource-ref>
		<description>MySql Connection</description>
		<res-ref-name>ampDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<servlet-mapping>
		<servlet-name>Print</servlet-name>
		<url-pattern>/Print.out</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetChart</servlet-name>
		<url-pattern>/GetChart.out</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MDXQueryServlet</servlet-name>
		<url-pattern>/mdxquery</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MondrianXmlaServlet</servlet-name>
		<url-pattern>/xmla</url-pattern>
	</servlet-mapping>
	

</web-app>
