/**
 *
 */
function hs_select_primarysectors_get_item_name($id) {
	db_set_active("amp_projects");
	$query = db_select('amp_sector', 'sector')->fields('sector', array('amp_sector_id', 'name'))
	 		->condition('sector.amp_sector_id', $id, '=');
	
	$result = $query->execute();
	$item = array();
	foreach ($result as $record) {
		$item[] = array('id' => $record->amp_sector_id, 'name' => check_plain($record->name));
	}
	
	db_set_active();
	return $item;
}