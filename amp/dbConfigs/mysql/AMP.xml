    <VirtualCubeDimension  cubeName="Pledges Funding" name="Primary Sector"/>
    <VirtualCubeDimension  cubeName="Pledges Funding" name="Regions"/>
    <VirtualCubeDimension  cubeName="Pledges Funding" name="Donor"/>
