				allMemberCaption="#All_Donor#">
				<!-- No table element here. Fact table is assumed. -->
				<Level name="DonorName" column="donor_name">
					<NameExpression>
						<SQL dialect="mysql">
							IFNULL(donor_name,'#No_Data#')
						</SQL>
					</NameExpression>
				</Level>
			</Hierarchy>
		</Dimension>
		<Dimension name="Donor Group">
