<xs:schema xmlns:ar="http://digijava.org/module/digifeed/feeds/ar/schema.xml"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
           xmlns:msdata="urn:schemas-microsoft-com:xml-msdata" targetNamespace="http://digijava.org/module/digifeed/feeds/ar/schema.xml"
           xmlns="http://digijava.org/module/digifeed/feeds/ar/schema.xml" elementFormDefault="qualified"
           id="ar"
           jaxb:version="1.0">

    <xs:element name="reports" msdata:IsDataSet="true">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="report" type="ar:reportType" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="reportType">
        <xs:sequence>
            <xs:element name="column" type="ar:columnType" minOccurs="1"
                        maxOccurs="unbounded"/>
            <xs:element name="hierarchy" type="ar:columnType" minOccurs="0"
                        maxOccurs="unbounded"/>
            <xs:element name="measure" type="ar:measureType" minOccurs="0"
                        maxOccurs="unbounded"/>
            <xs:element name="description" type="xs:string" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
        <xs:attribute name="id" type="xs:long" use="required"/>
        <xs:attribute name="name" type="xs:string" use="required"/>
        <xs:attribute name="options" type="xs:string" use="optional"/>
        <xs:attribute name="type" type="xs:integer" use="required"/>
        <xs:attribute name="hideActivities" type="xs:boolean" use="required"/>
    </xs:complexType>

    <xs:complexType name="columnType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="id" type="xs:integer" use="required"/>
                <xs:attribute name="order" type="xs:integer" use="required"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="measureType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="id" type="xs:integer" use="required"/>
            </xs:extension>
        </xs:simpleContent>

    </xs:complexType>


</xs:schema>
