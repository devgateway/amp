<?xml version="1.0"?>
<ampModule-config>
	<name>gateperm</name>

<security>
		<!-- GatePerm administration -->
		<action login-required="true" pattern="/managePerm">ADMIN</action>
		<action login-required="true" pattern="/managePermMap">ADMIN</action>
		<action login-required="true" pattern="/exchangePermission">ADMIN</action>		
</security>		

	<hibernate-classes required="true">
		<hibernate-class>
			org.digijava.ampModule.gateperm.core.Permission
		</hibernate-class>
		<hibernate-class>
			org.digijava.ampModule.gateperm.core.PermissionMap
		</hibernate-class>
	</hibernate-classes>	
</ampModule-config>