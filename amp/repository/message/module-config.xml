<?xml version="1.0" encoding="UTF-8"?>
<ampModule-config>
	<name>message</name>
	<security login-required="true" default="READ">
		<action login-required="true" pattern="/messageActions" />
		<action login-required="true" pattern="/msgSettings">ADMIN</action>
		<action login-required="true" pattern="/templatesManager">ADMIN</action>
		<action login-required="true" pattern="/exportImportTemplates">ADMIN</action>
	</security>
		<hibernate-classes required="false">
			<hibernate-class>
                      org.digijava.ampModule.message.dbentity.AmpMessage
            </hibernate-class>
			<hibernate-class>
					  org.digijava.ampModule.message.dbentity.AmpMessageState
			</hibernate-class>
			<hibernate-class>
					  org.digijava.ampModule.message.dbentity.AmpMessageSettings
			</hibernate-class>
			<hibernate-class>
                      org.digijava.ampModule.message.dbentity.AmpMessageReceiver
            </hibernate-class>
			<hibernate-class>
					  org.digijava.ampModule.message.dbentity.AmpEmail
			</hibernate-class>
			<hibernate-class>
					  org.digijava.ampModule.message.dbentity.AmpEmailReceiver
			</hibernate-class>
			
		</hibernate-classes>
</ampModule-config>
