<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <form-beans>
  	<form-bean name="MainReportsForm" type="org.digijava.module.mondrian.form.MainReportsForm"/>
  	<form-bean name="ShowReportForm" type="org.digijava.module.mondrian.form.ShowReportForm"/>
  	<form-bean name="SaveHtmlForm" type="org.digijava.module.mondrian.form.SaveHtmlForm"/>
  </form-beans>
  
  <action-mappings>
    <action name="MainReportsForm" path="/mondrian/mainreports" scope="session" type="org.digijava.module.mondrian.action.MainReports">
    	<forward name="forward" path="/showLayout.do?layout=mainreports"/>
    </action>
    <action name="ShowReportForm" path="/mondrian/showreport" scope="session" type="org.digijava.module.mondrian.action.ShowReport">
    	<forward name="forward" path="/showLayout.do?layout=showreport"/>
    </action>
    <action name="SaveHtmlForm" path="/mondrian/SaveHtml" scope="session" type="org.digijava.module.mondrian.action.SaveHtml">
    	<forward name="forward" path="/showLayout.do?layout=savehtml"/>
    	<forward name="mainreport" path="/mondrian/mainreports.do" redirect="true"/>
    	<forward name="report" path="/mondrian/showreport.do" redirect="true"/>
    </action>
   </action-mappings>
</struts-config>
