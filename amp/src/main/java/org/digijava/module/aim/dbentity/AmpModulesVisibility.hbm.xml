<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.ampModule.aim.dbentity.AmpModulesVisibility"
		table="AMP_MODULES_VISIBILITY" lazy="false">
		<cache usage="read-write" />
		<id name="id" column="id" type="java.lang.Long">
			<generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
				<param name="sequence_name">amp_modules_visibility_seq</param>
			</generator>
		</id>

		<property name="name" column="name" type="java.lang.String" unique="true"/>
		<property name="description" column="description" type="java.lang.String" />
		<property name="hasLevel" column="hasLevel" type="java.lang.Boolean" />


		<set name="items" table="AMP_FEATURES_VISIBILITY" inverse="true" cascade="all" lazy="false">
			<cache usage="read-write" />
			<key column="parent" />
			<one-to-many class="org.digijava.ampModule.aim.dbentity.AmpFeaturesVisibility" />
		</set>

		<many-to-one name="parent" column="parent"
			class="org.digijava.ampModule.aim.dbentity.AmpModulesVisibility" />


		<set name="submodules" cascade="all" inverse="true" lazy="false">
			<cache usage="read-write" />
			<key column="parent" />
			<one-to-many class="org.digijava.ampModule.aim.dbentity.AmpModulesVisibility" />
		</set>

		<set name="templates" table="amp_modules_templates" inverse="true" lazy="false">
			<cache usage="read-write" />
			<key column="ampModule" />
			<many-to-many column="template"
				class="org.digijava.ampModule.aim.dbentity.AmpTemplatesVisibility" />
		</set>

	</class>
</hibernate-mapping>
