<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.ampModule.aim.dbentity.AmpOrgRole" table="AMP_ORG_ROLE">
		<cache usage="read-write" />
		<id name="ampOrgRoleId" column="amp_org_role_id" type="java.lang.Long">
			<generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
				<param name="sequence_name">AMP_ORG_ROLE_seq</param>
			</generator>
		</id>
		<property name="percentage" column="percentage" type="java.lang.Float"/>
		<property name="additionalInfo" column="additional_info" type="java.lang.String" />
		<!-- <property name="budgetCode" column="budget_code" type="java.lang.String" />
		 -->
		 <many-to-one name="activity" class="org.digijava.ampModule.aim.dbentity.AmpActivityVersion"
			cascade="delete" />
		<many-to-one name="organisation" class="org.digijava.ampModule.aim.dbentity.AmpOrganisation"
			cascade="none" />
		<many-to-one name="role" class="org.digijava.ampModule.aim.dbentity.AmpRole" cascade="none" />
		
		<set name="budgets" cascade="delete" order-by="amp_orgrole_budget_id asc" inverse="true">
			<cache usage="read-write" />
			<key column="amp_org_role_id" />
			<one-to-many class="org.digijava.ampModule.aim.dbentity.AmpOrgRoleBudget" />
		</set>
		
		<set name="gpiNiSurveys" cascade="all-delete-orphan" inverse="true">
			<cache usage="read-write" />
			<key column="amp_org_role_id" />
			<one-to-many class="org.digijava.ampModule.aim.dbentity.AmpGPINiSurvey" />
		</set>		
	</class>
</hibernate-mapping>

