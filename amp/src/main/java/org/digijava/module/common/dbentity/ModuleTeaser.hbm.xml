<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="org.digijava.module.common.dbentity.ModuleTeaser"
		table="DG_MODULE_TEASER_SETTINGS">
		<cache usage="read-write" />
		<id column="module_instance_id" name="id" type="java.lang.Long">
			<generator class="assigned" />
		</id>
		<property name="showTeaser" column="show_teaser" type="java.lang.String" />
		<property name="order" column="teaser_order" type="java.lang.Long" />
		<property name="showItemsPerTeaser" column="show_num_items_teaser" type="java.lang.String" />

	</class>

</hibernate-mapping>