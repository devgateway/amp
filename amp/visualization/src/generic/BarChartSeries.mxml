				if(idContainer == "AidType"){
					params["typeofaid"] = "true";
				}
				if (thumbCount==1){
					params["startYear"] = sliderYear.values[0];
					params["endYear"] = sliderYear.values[0];
				} else {
					params["startYear"] = sliderYear.values[0];
					params["endYear"] = sliderYear.values[1];
				}
				ExternalInterface.call("function(){ updateSliderValues('" + idContainer + "',"+params["startYear"]+","+params["endYear"]+")}");
				printLabel.text = trnYears + ": " + sliderYear.labels[sliderYear.values[0]-startYear] + " to " + sliderYear.labels[sliderYear.values[1]-startYear] +" - " + trnCurrency + ": " + currCode;
				service.send(params);
				messageLoadingPanel.visible = true;
				sizeLoadingPanel(300, 200);
				dc.visible = false;
				var delayer:Delay = new Delay(captureSnapshot,4000,1);
				sliderYear.setVisible(false);
			}

		]]>
	</mx:Script>

