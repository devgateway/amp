							formatter.precision = 2;
						}
					}
				} else {
					formatter.precision = 0;
				}
				return formatter.format(obj);
			}

			private function checkLabelZero(obj:Object):String
			{
				var isSprite:Boolean = (obj is AxiisSprite)
				formatter.precision = decimalsToShow;
				if(isSprite)
				{
					var labelText:String = String(ObjectUtils.getProperty(this, obj.data,childLabelField))
				    var maximunPerLine:int = 42
				    var next:int = maximunPerLine
				    if (labelText.length > maximunPerLine) {
						var results:Array = labelText.split(/\s+/g);
						if (results.length > 1) {
							labelText = ""
						    for(var index:int = 0 ; index <results.length; index++){
							 labelText = labelText +" "+ results [index]
						     if (labelText.length > next) {
								 labelText = labelText + "<br>"
							     next = next + maximunPerLine
							 }
							}
								
						}
					}	
					return "<b>" + labelText + "</b><br/>" + formatter.format(Number(obj.data.amount)) + " " + currCode;
				}
				if(!isNaN(Number(obj.amount)) && Number(obj.amount) > 0 ){ 
					return formatter.format(Number(obj.amount));
				}
				else
					return " ";
			}
			
