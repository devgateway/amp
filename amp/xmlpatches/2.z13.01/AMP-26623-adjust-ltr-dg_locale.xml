<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="true" retryOnFail="true"
	xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">
	<jira>AMP-26932</jira>
	<keyword>adjust dg_locale</keyword>
	<author>jdeanquin</author>
	<description>Adjust ltr from dg_locale table</description>
	<apply>
		<script>
			<lang delimiter=";" type="postgres">
				UPDATE dg_locale SET left_to_right = false WHERE name IN
				('Persian','Urdu','Hebrew','Arabic','Kurdish');
				UPDATE dg_locale SET left_to_right = true WHERE name NOT IN
				('Persian','Urdu','Hebrew','Arabic','Kurdish');
			</lang>
		</script>
	</apply>
</tns:patch>
