<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="false" retryOnFail="true"
	xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">
	<jira>AMP-13984</jira>
	<keyword>Views</keyword>
	<keyword>Agreement</keyword>
	<author>Alex</author>
	<description>Views for agreement ( title + code )</description>
	<trigger type="all">
		<condition type="custom">
			<script returnVar="val">
				<lang type="sql">
					SELECT settingsvalue FROM amp_global_settings where settingsname='Recreate the views on the next server restart';
				</lang>
			</script>
 			<test>val.equalsIgnoreCase("true")</test>
		</condition>
	</trigger> 
	<apply>
		<script>
			<lang delimiter=";" type="postgres">
			    	create or replace view v_capital_and_exp as 
	select amp_activity_id, 'Capital' from amp_activity UNION select amp_activity_id, 'Expenditure' from amp_activity order by amp_activity_id;
			</lang>
		</script>
	</apply>
</tns:patch>
