<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpActivity" table="AMP_ACTIVITY">
		<cache usage="read-write" />
		<id name="ampActivityId" column="amp_activity_id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_ACTIVITY_seq</param>
			</generator>
		</id>
		<property name="ampId" column="amp_id" type="java.lang.String"/>
		<property name="name" column="name" type="java.lang.String"/>
		<property name="description" column="description"  type="org.digijava.kernel.db.SafeClobType"/>
		<property name="objective" column="objectives" type="org.digijava.kernel.db.SafeClobType"/>
        <property name="documentSpace" column="document_space" type="java.lang.String"/>
		<property name="language" column="language" type="java.lang.String"/>
		<property name="version" column="version" type="java.lang.String"/>
		<property name="calType" column="cal_type" type="java.lang.String"/>
		<property name="activityApprovalDate" column="activity_approval_date" type="java.util.Date" />		<!-- defunct -->
		<property name="activityStartDate" column="activity_start_date" type="java.util.Date" /> 			<!-- defunct -->
		<property name="activityCloseDate" column="activity_close_date" type="java.util.Date" />			<!-- defunct -->
		<property name="originalCompDate" column="original_comp_date" type="java.util.Date" />				<!-- defunct -->
		<property name="condition" column="`condition`" type="org.digijava.kernel.db.SafeClobType"/>

		<property name="contactName" column="contact_name" type="java.lang.String"/>                        <!-- defunct -->

		<!-- Donor contact information -->
		<property name="contFirstName" column="cont_first_name" type="java.lang.String"/>
		<property name="contLastName" column="cont_last_name" type="java.lang.String"/>
		<property name="email" column="email" type="java.lang.String"/>

		<!-- MOFED contact information -->
		<property name="mofedCntFirstName" column="mofed_cnt_first_name" type="java.lang.String"/>
		<property name="mofedCntLastName" column="mofed_cnt_last_name" type="java.lang.String"/>
		<property name="mofedCntEmail" column="mofed_cnt_email" type="java.lang.String"/>


		<property name="comments" column="comments" type="org.digijava.kernel.db.SafeClobType"/>
		<property name="statusReason" column="status_reason" type="org.digijava.kernel.db.SafeClobType"/>

		<property name="proposedStartDate" column="proposed_start_date" type="java.util.Date" />
		<property name="actualStartDate" column="actual_start_date" type="java.util.Date" />
		<property name="proposedApprovalDate" column="proposed_approval_date" type="java.util.Date" />
		<property name="actualApprovalDate" column="actual_approval_date" type="java.util.Date" />
		<property name="actualCompletionDate" column="actual_completion_date" type="java.util.Date" />

		<property name="createdDate" column="date_created" type="java.util.Date" />
		<property name="updatedDate" column="date_updated" type="java.util.Date" />

		<property name="programDescription" column="program_description"  type="org.digijava.kernel.db.SafeClobType"/>
		<property name="contractors" column="contractors" type="org.digijava.kernel.db.SafeClobType"/>
		<property name="funAmount" column="proj_cost_amount" type="java.lang.Double"/>
        <property name="currencyCode" column="proj_cost_currcode" type="java.lang.String"/>
        <property name="funDate" column="proj_cost_date" type="java.lang.String"/>

		<many-to-one name="status" column="amp_status_id" class="org.digijava.module.aim.dbentity.AmpStatus" cascade="none"/>
		<many-to-one name="level" column="amp_level_id" class="org.digijava.module.aim.dbentity.AmpLevel" cascade="none"/>
		<many-to-one name="themeId" column="amp_theme_id" class="org.digijava.module.aim.dbentity.AmpTheme" cascade="none"/>
		<many-to-one name="modality" column="amp_modality_id" class="org.digijava.module.aim.dbentity.AmpModality" cascade="none"/>
		<many-to-one name="team" column="amp_team_id" class="org.digijava.module.aim.dbentity.AmpTeam" cascade="none"/>
		<many-to-one name="country" column="country_iso" class="org.digijava.kernel.dbentity.Country" cascade="none"/>

		<many-to-one name="author" column="author" class="org.digijava.kernel.user.User" cascade="none"/>   <!-- defunct -->
		<many-to-one name="activityCreator" column="activity_creator"
			class="org.digijava.module.aim.dbentity.AmpTeamMember" cascade="none"/>

		<property name="approvalStatus" column="approval_status" type="java.lang.String"/>
		
		<property name="lineMinRank" column="line_min_rank" type="java.lang.Integer"/>
		<property name="planMinRank" column="plan_min_rank" type="java.lang.Integer"/>

		<!--
		<set name="orgrole" table="amp_org_role" lazy="true">
			<key column="amp_activity_id"/>
				<composite-element class="org.digijava.module.aim.dbentity.AmpOrgRole">
					<many-to-one name="organisation" class="org.digijava.module.aim.dbentity.AmpOrganisation" column="amp_org_id"/>
					<many-to-one name="role" class="org.digijava.module.aim.dbentity.AmpRole" column="amp_role_id"/>
				</composite-element>
		</set>
		-->

		<set name="orgrole" cascade="all">
		<cache usage="read-write" />
			<key column="activity"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpOrgRole"/>
 		</set>

		<set name="sectors" cascade="all" inverse="true">
			<cache usage="read-write"/>
			<key column="amp_activity_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpActivitySector" />
		</set>

		<set name="locations" table="AMP_ACTIVITY_LOCATION" lazy="true" cascade="all">
			<cache usage="read-write"/>
			<key column="amp_activity_id"/>
			<many-to-many class="org.digijava.module.aim.dbentity.AmpLocation" column="amp_location_id"/>
		</set>

		<set name="internalIds" table="AMP_ACTIVITY_INTERNAL_ID">
			<key column="amp_activity_id"/>
			<composite-element class="org.digijava.module.aim.dbentity.AmpActivityInternalId">
				<many-to-one name="organisation" class="org.digijava.module.aim.dbentity.AmpOrganisation"
					column="amp_org_id"/>
				<property name="internalId" column="internal_id"  type="java.lang.String"/>
			</composite-element>
		</set>

		<set name="funding" cascade="all" inverse="true">
		<cache usage="read-write" />
			<key column="amp_activity_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpFunding"/>
		</set>

		<set name="components" table="AMP_ACTIVITY_COMPONENTS" lazy="true" cascade="none">
		<cache usage="read-write" />
			<key column="amp_activity_id"/>
			<many-to-many class="org.digijava.module.aim.dbentity.AmpComponent" column="amp_component_id"/>
 		</set>

 		<set name="documents" table="AMP_ACTIVITY_KM_DOCUMENTS" lazy="true" cascade="none">
  	            <cache usage="read-write"/>
				<key column="amp_activity_id"/>
				<many-to-many class="org.digijava.module.cms.dbentity.CMSContentItem" column="id"/>
		</set>

		<set name="member" table="AMP_MEMBER_ACTIVITIES" lazy="true" inverse="true">
  	            <cache usage="read-write"/>
				<key column="amp_activity_id"/>
				<many-to-many class="org.digijava.module.aim.dbentity.AmpTeamMember" column="amp_member_id"/>
		</set>

		<set name="notes" cascade="delete" inverse="true">
		<cache usage="read-write" />
			<key column="amp_activity_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpNotes"/>
		</set>

		<set name="closingDates" cascade="all" inverse="true" order-by="closing_date desc">
		<cache usage="read-write" />
			<key column="amp_activity_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpActivityClosingDates" />
		</set>

		<set name="issues" cascade="all" inverse="true" order-by="amp_issue_id asc">
		<cache usage="read-write" />
			<key column="amp_activity_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpIssues"/>
 		</set>

		<set name="regionalFundings" cascade="all" inverse="true">
		<cache usage="read-write" />
			<key column="activity_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpRegionalFunding"/>
 		</set>

 		<set name="survey" cascade="save-update" table="AMP_AHSURVEY" inverse="true">
			<cache usage="read-write"/>
			<key column="amp_activity_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpAhsurvey"/>
		</set>

	</class>
</hibernate-mapping>
