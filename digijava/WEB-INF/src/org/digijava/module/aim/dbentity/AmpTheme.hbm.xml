<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpTheme" table="AMP_THEME">
		<cache usage="read-write" />
		<id name="ampThemeId" column="amp_theme_id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_THEME_seq</param>
			</generator>
		</id>
		<many-to-one name="parentThemeId" column="parent_theme_id" class="org.digijava.module.aim.dbentity.AmpTheme" cascade="none"/>
		<property name="themeCode" column="theme_code" type="java.lang.String"/>
		<property name="name" column="name" type="java.lang.String"/>
		<property name="type" column="type" type="java.lang.String"/>
		<property name="description" column="description"  type="org.digijava.kernel.db.SafeClobType"/>
		<property name="language" column="language" type="java.lang.String"/>
		<property name="version" column="version" type="java.lang.String"/>

        <many-to-one name="activityId" column="amp_activity_id" class="org.digijava.module.aim.dbentity.AmpActivity"
					 cascade="none" not-null="false" />

        <set name="indicators" table="AMP_THEME_INDICATOR" lazy="true" inverse="true">
			<cache usage="read-write"/>
			<key column="amp_theme_id"/>
			<many-to-many class="org.digijava.module.aim.dbentity.AmpThemeIndicators" column="amp_theme_ind_id"/>
		</set>
	</class>
</hibernate-mapping>
