<% labeled_form_for @donor, :url => donor_details_path do |f| %>

    <% f.field_set t('donor_details.general_info') do %>
		<li class="fifty"><%= f.text_field :field_office_address %></li>
		<li class="fifty"><%= f.text_field :field_office_phone %></li>
		<li class="fifty"><%= f.text_field :field_office_email %></li>
		<li class="fifty"><%= f.text_field :field_office_website %></li>

		<li class="fifty"><%= f.text_field :head_of_mission_name %></li>
		<li class="fifty"><%= f.text_field :head_of_mission_email %></li>
            
		<li class="fifty"><%= f.text_field :head_of_cooperation_name %></li>
		<li class="fifty"><%= f.text_field :head_of_cooperation_email %></li>
            
		<li class="fifty"><%= f.text_field :first_focal_point_name %></li>
		<li class="fifty"><%= f.text_field :first_focal_point_email %></li>
            
		<li class="fifty"><%= f.text_field :second_focal_point_name %></li>
		<li class="fifty"><%= f.text_field :second_focal_point_email %></li>
       
		<li style="visibility:hidden;"><%= f.text_field :institutions_responsible_for_oda %></li>
    <% end %>
    <% f.field_set t('donor_details.donor_profile') do %>
                <li class="fifty" style="height:360px;">
                  <%=  t('.total_oda_classification_title')%>:
                </li>
                <li class="fifty" style="height:360px;">
                  <%= f.text_field :oda_on_budget_1 %>
                  <%= f.select :oda_on_budget_1_currency, ExchangeRate.available_currencies.map { |c| [c, c] } %>
                  <%= f.text_field :oda_on_budget_2 %>
                  <%= f.select :oda_on_budget_2_currency, ExchangeRate.available_currencies.map { |c| [c, c] } %>
                  <%= f.text_field :oda_on_budget_3 %>
                  <%= f.select :oda_on_budget_3_currency, ExchangeRate.available_currencies.map { |c| [c, c] } %>
		  <%= f.text_field :oda_on_budget_4 %>
                  <%= f.select :oda_on_budget_4_currency, ExchangeRate.available_currencies.map { |c| [c, c] } %>
                </li>
                <li>
		  <%= f.text_field :parallel_piu, :size => 5 %>
                </li>
                <li class="fifty" style="height:100px;">
                  <%=  t('.yearly_missions_head')%>:
                </li>
                <li class="fifty" style="height:100px;">
		  <%= f.text_field :yearly_missions, :size => 5  %>
		  <%= f.text_field :yearly_coordinated_missions, :size => 5  %>
                </li>
                <li class="fifty" style="height:100px;">
                  <%=  t('.yearly_analytic_works_head')%>:
                </li>
                <li class="fifty" style="height:100px;">
		  <%= f.text_field :yearly_analytic_works, :size => 5  %>
		  <%= f.text_field :yearly_coordinated_analytic_works, :size => 5  %>
                </li>
                <li class="fifty" style="height:100px;">
                  <%=  t('.gbs_head')%>:
                </li>
                <li class="fifty" style="height:100px;">
		  <%= f.select :gbs_multiyear_agreement, translate_options(Donor::YES_NO_OPTIONS) %>
		  <%= f.text_field :gbs_multiyear_agreement_years, :size => 5 %>
                </li>
                <li>
		  <%= f.select :gbs_question_1, translate_options(Donor::YES_NO_OPTIONS)  %>
                </li>
                <li>
		  <%= f.select :gbs_question_2, translate_options(Donor::YES_NO_OPTIONS)  %>
                </li>
                <li>
		  <%= f.select :gbs_question_3, translate_options(Donor::YES_NO_OPTIONS)  %>
                </li>
                <li>
		  <%= f.text_area :gbs_question_4 %>
                </li>


  <% end %>

    <% Time.now.year.upto(Time.now.year) do |y| %>
      <% f.field_set t('donor_details.details_title', :year => y) do %>
          <% f.fields_for :donor_details, @donor.donor_details.find_or_initialize_by_year(y) do |fa| -%>
            <%= fa.hidden_field :year, :value => y %>
            <li class="thirty"><%= fa.text_field :total_staff_in_country, :value => fa.object.andand.total_staff_in_country  %></li>
            <li class="thirty"><%= fa.text_field :total_expatriate_staff, :value => fa.object.andand.total_expatriate_staff %></li>
            <li class="thirty"><%= fa.text_field :total_local_staff, :value => fa.object.andand.total_local_staff  %>
          <% end %>
      <% end %>
    <% end %>
	
	<div class="buttonHolder"><%= f.submit %></div>
<% end %>