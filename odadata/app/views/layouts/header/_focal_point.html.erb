<div style="height:90px;padding:10px 0px 0px 10px;background-color:#27415f">
	<div style="float:left;width:500px;text-align:left;background-color:#27415f">
		<a href="/">
		<img src="/images/ODAdataLogo_<%=Prefs.country_code%>.gif" alt="ODAdata" width="236" height="80" border="0" style="float:left" />
		</a>
        <p style="color:#fff;font-weight:bold;"><%=  t('.short_title') %></p>
	</div>
    
	<!-- START User Info Bar -->
	<div style="float:right;text-align:right;padding-right:10px;">
		<p style="color:#fff;font-weight:bold;">
			<%= current_user.name %><br>
			<% if current_donor.flag.url(:avatar).include?('missing.png') %>
				<img src="/flags/missing/regular/missing.png" hspace="8" alt="missing.png" width="30" height="20" align="absmiddle" style="border:1px solid white"/>
			<% else %>
				<%= image_tag current_donor.flag.url(:avatar), :align => "absmiddle", :hspace => 8, :style => "border:1px solid white" %>
			<% end %>
			<%= current_donor.name %>
		</p>
	</div>
	<!-- END User Info Bar -->
</div>

