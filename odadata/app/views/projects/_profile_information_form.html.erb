<script language="javascript">
	// TODO: Create datepicker css class and move this into application.js
  $(document).ready(function(){
		$.datepicker.setDefaults({
      showOn: "button", 
      buttonImage: "/images/datepicker.png", 
      buttonImageOnly: true,
      dateFormat: 'yy-mm-dd'
    });

    $('#project_planned_end').datepicker();
    $('#project_planned_start').datepicker();
    $('#project_actual_end').datepicker();
    $('#project_actual_start').datepicker();
	});
</script>


<% f.field_set do %>
	<li><%= f.text_field :title, :size => 80, :class => "large" %></li>
	<li><%= f.text_area  :description, :rows => 10, :class => "large" %></li>

	<li class="fifty"><%= f.text_field :donor_project_number %>
        <%= error_message_on(:project, :donor_project_number, "", "", "error_message" )%></li>
	<li class="fifty"><%= f.text_field :oecd_number %></li>
	<li><%= f.text_field :recipient_country_budget_nr, :class => "large" %></li>

	<li><%= f.collection_select :donor_agency_id, @project.donor.agencies, "id", "name_with_code",
				{ :required => true, :prompt => t('.prompt') }, :class => "large" %></li>
	
<!--
	<li><%#= f.collection_select :country_strategy_id, @project.donor.country_strategies, "id", "strategy_number",
	 		{ :prompt => t('.country_strategy_unavailable') }, :class => "large" %></li>
-->

	<li><%= f.select :prj_status, @project.status_options, 
			:include_blank => t('.prompt'), :translate => true %></li>
    
  <li class="fifty">
  	<%= f.text_field :planned_start, :readonly =>true %>
  	<%= error_message_on(:project, :planned_start, "","", "error_message" ) %>
  </li>

  <li class="fifty">
    <%= f.text_field :planned_end, :readonly =>true  %>
    <%= error_message_on(:project, :planned_end, "","", "error_message" ) %>
  </li>
  
  <li class="fifty">
  	<%= f.text_field :actual_start, :readonly =>true %>
  	<%= error_message_on(:project, :actual_start, "","", "error_message" ) %>
  </li>

  <li class="fifty">
    <%= f.text_field :actual_end, :readonly =>true  %>
    <%= error_message_on(:project, :actual_end, "","", "error_message" ) %>
  </li>
	<li><%= f.text_field :website, :class => "large" %></li>
	<li><%= f.text_area :comments, :rows => 10, :class => "large" %></li>
<% end %>

