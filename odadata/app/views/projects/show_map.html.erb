<table>
<tr>
<td style="text-align: left; vertical-align: top;">
	<img src="/images/nicaragua_flag.png" style="float: left" />
</td>
<td style="text-align: center; vertical-align: top; width: 450px;">
	<h3>Nicaragua</h3>
	<h4><%= ll(:terms, :project) %>: <%= @project.donor.name %>/<%= @project.donor_project_number %></h4>
</td>
<td style="vertical-align: center; text-align: center; width: 170px">
	<h3><%= ll(:terms, :regions) %> &amp; <%= ll(:terms, :municipalities) %></h3>
</td>
</tr>
<tr>
	<td colspan=2 style="vertical-align: top">
		<%= image_tag(map_project_path, :format => 'png') %>
		<p style="padding: 0; margin: 0">* <%= ll(:reports, :map_legend) %></p>
	</td>
	<td style="vertical-align: top">
		<%= format_as_html_table(@project.geo_list.sort {|a,b| a[0] <=> b[0]}.map {|k,v| [k, format_as_html_list(v)]}, :per_row => 1, :class => "simple_list", :style => "margin-top: 20px; text-align: left; width: 100%") %>
	</td>
</tr>
</table>	