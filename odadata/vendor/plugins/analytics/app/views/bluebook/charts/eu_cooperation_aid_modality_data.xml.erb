<?xml version="1.0" encoding="UTF-8"?>
<chart>
	<series>
		<% AidModality.all.each do |toa| %>
			<value xid="<%= toa.id %>"><%= toa.name %></value>
		<% end %>
	
	</series>
	
	<graphs>	
		<graph gid="1" title="<%= ll(:terms, :disbursements) %> <%= year %>" color="#0000FF">
			<% AidModality.all.each do |toa| %>
                          <value xid="<%= toa.id %>"><%= ((@aid_payments[toa.id].andand.to_f)/1_000_000).round(2) %></value>
			<% end %>
		</graph>
		
		<graph gid="2" title="<%= ll(:charts, :legends, :disbursements_forecast) %> <%= year + 1 %>" color="#00FFFF">
			<% AidModality.all.each do |toa| %>
				<value xid="<%= toa.id %>"><%= ((@aid_forecasts[toa.id].andand.to_f)/1_000_000).round(2) %></value>
			<% end %>
		</graph>
	</graphs>
</chart>