<table class="bluebook">
	<tr>
		<td colspan=4 class="head"><center><%= ll(:bluebook, :contents, :eu_at_a_glance, :institutions) %></center></td>
	</tr>	
	<tr>
		<td class="eu_title" colspan=4>
			<strong><%= lc(:summary) %></strong>
		</td>
	</tr>
	<tr>
		<td class="eu_title" colspan=2 width=60% valign=top>
			<%= lc(:council) %>
		</td>
		<td>
			<th rowspan=6 width=40%>
				<table>
					<tr>
						<td class="eu_sub_title">
							<%= lc(:committee) %>
						</td>
					</tr>
					<tr>
						<td style="font-weight:normal;">					
							<%= lc(:committee_contents) %>
						</td>
					</tr>
					<tr>
						<td class="eu_sub_title">
							<%= lc(:committee_of_regions) %>
						</td>
					</tr>
					<tr>
						<td style="font-weight:normal;">
							<%= lc(:cor_contents) %>
						</td>
					</tr>
					<tr>
						<td class="eu_sub_title">
							<%= lc(:central_bank) %>
						</td>
					<tr>
						<td style="font-weight:normal;">
							<%= lc(:ecb_contents) %>
						</td>
					</tr>
					<tr>
						<td class="eu_sub_title">
							<%= lc(:investment_bank) %>
						</td>
					</tr>
					<tr>
						<td style="font-weight:normal;">
							<%= lc(:eib_contents) %>
						</td>
					</tr>
				</table>
			</th>
		</td>
	</tr>
	<tr>
		<td valign=top colspan=2>
			<%= lc(:council_contents) %>
		</td>
	</tr>
	<tr>
		<td class="eu_title" width=30% valign=top>
			<%= ll(:terms, :ec) %>
		</td>
		<td class="eu_title" width=30% valign=top>
			<%= ll(:terms, :ep) %>
		</td>
	</tr>
	<tr>
		<td valign=top>
			<%= lc(:ec_contents) %>
		</td>		
		<td valign=top>
			<%= lc(:ep_contents) %>
		</td>
	</tr>
	
	<tr>
		<td class="eu_title" width=30% valign=top>
			<%= lc(:court_of_justice) %>
		</td>
		<td class="eu_title" width=30% valign=top>
			<%= lc(:court_of_auditors) %>
		</td>
	</tr>
	<tr>
		<td valign=top>
			<%= lc(:coj_contents) %>
		</td>		
		<td valign=top>
			<%= lc(:coa_contents) %>
		</td>
	</tr>
</table>